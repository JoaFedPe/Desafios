{{#if isValid}}
<div>
    <h1>Bienvenido, 
        <p>Nombre: {{user.first_name}}</p>
        <p>Apellido: {{user.last_name}}</p>
    </h1>

    <div>
    <a href="/profile"><button>Ir a su Perfil</button></a>
    </div>

    {{!-- <div>
    <a href="carts/6697e9f07d41327ad0faa890"><button>Carrito</button></a>
    </div> --}}
    
    <div>
    <a href="carts/{{cart._id}}"><button>Carrito</button></a>
    <p>Cart ID: {{cart._id}}</p>
    </div>
    

    {{#each docs}}
    <div>
        <p>{{this.title}} - {{this.description}} - {{this.code}} - {{this.price}} - {{this.status}} - {{this.stock}}- {{this.category}} - {{this._id}} </p>
        <button type="button" id="boton" onclick="addProduct('{{this._id}}')" >AÃ±adir al carrito</button>
    </div>
    <br/>
    {{/each}}
</div>
<br/>
<div>
    {{#if hasPrevPage}}
    <a href={{this.prevLink}}>
           Anterior</a>
           {{/if}}
           &nbsp;
           {{this.page}}
           &nbsp;
           {{#if hasNextPage}}
           <a href={{this.nextLink}}> Siguiente </a>
           {{/if}}
</div>
{{else}}
<h1>No hay productos que mostrar</h1>
{{/if}}

<script>   

    function addProduct(_id){      
   
    fetch(`/carts/${cart._id}/product/`+_id,{
        
        method: 'PUT',
        headers: {
            'Content-Type': 'application/json',
        },
        
    })
}
</script>

